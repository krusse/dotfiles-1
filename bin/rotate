#!/bin/sh

rotate() {
    if [ `git config user.email` = "luisa@kidzen.us" ]; then
        echo "Rui's turn"
        git config --local user.name "Rui Afonso Pereira"
        git config --local user.email "rui@kidzen.us"
    else
        echo "Luisa's turn"
        git config --local user.name "Luisa Lima"
        git config --local user.email "luisa@kidzen.us"
    fi
}
rotate
