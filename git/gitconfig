# vim: set ft=gitconfig:

[alias]
  lg = log --abbrev-commit --date=relative --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset'
  gsb = gss --branch
  verbs = !git log --pretty=format:'%s' | cut -d \" \" -f 1 | sort | uniq -c | sort -nr | head -15

[branch]
  autoSetupRebase = always

[core]
  autocrlf = input
  excludesfile = ~/.gitignore_global

[color]
  ui = always

[color "status"]
  added = cyan
  changed = red
  untracked = yellow

[commit]
  gpgSign = true
  template = ~/.dotfiles/git/gitmessage.txt

[diff]
  indentHeuristic = true

[fetch]
  prune = true

[gpg]
  program = gpg2

[help]
  autocorrect = 1

[include]
  path = ~/.gitconfig.local

[interactive]
  singleKey = true

[merge]
  tool = vimdiff

[rebase]
  autoSquash = true

[pager]
  diff = diff-so-fancy | less --tabs=4 -RFX
  show = diff-so-fancy | less --tabs=4 -RFX

[push]
  default = current

[user]
  name = Rui Afonso Pereira
  signingkey = F1156874
  useConfigOnly = true
